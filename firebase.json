{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": ["dist", "secrets"],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/helloWorld",
        "function": "helloWorld"
      },
      {
        "source": "/getUsers",
        "function": "getUsers"
      },
      {
        "source": "/getUser",
        "function": "getUser"
      },
      {
        "source": "/setUser",
        "function": "setUser"
      },
      {
        "source": "/removeUser",
        "function": "removeUser"
      },
      {
        "source": "/getPlaces",
        "function": "getPlaces"
      },
      {
        "source": "/getTeams",
        "function": "getTeams"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
